@startuml C4_Context_UA
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title Система Моніторингу та Відстеження Нагород - Діаграма Контексту Системи (C4 Рівень 1)

LAYOUT_WITH_LEGEND()

' Актори / Користувачі
Person(employee, "Працівник", "Викладач/співробітник університету, який подає та відстежує нагороди")
Person(faculty_secretary, "Секретар Факультету", "Перевіряє та схвалює нагороди рівня факультету")
Person(dean, "Декан", "Керівництво факультету, розглядає ескальовані нагороди")
Person(rector_secretary, "Секретар Ректора", "Розглядає нагороди університетського рівня")
Person(rector, "Ректор", "Остаточне право схвалення університетських нагород")
Person(system_admin, "Системний Адміністратор", "ІТ-операції та обслуговування системи")

' Основна Система
System(award_system, "Система Моніторингу та Відстеження Нагород", "Комплексна платформа для управління, відстеження та валідації нагород працівників з ШІ-обробкою документів та багаторівневими процесами схвалення")

' Зовнішні Системи
System_Ext(ldap, "Університетський LDAP/AD", "Аутентифікація користувачів та синхронізація даних працівників")
System_Ext(ai_service, "Хмарний ШІ-Сервіс", "OCR документів та вилучення метаданих (Azure Cognitive Services)")
System_Ext(email_service, "Поштовий Сервер", "SMTP сервер для email-сповіщень")
System_Ext(sms_gateway, "SMS-Шлюз", "SMS-сповіщення для критичних повідомлень")
System_Ext(file_storage, "Хмарне Файлове Сховище", "Зберігання сертифікатів та документів (S3/Azure Blob)")

' Зв'язки - Актори до Системи
Rel(employee, award_system, "Подає нагороди, відстежує статус, переглядає публічні нагороди", "HTTPS")
Rel(faculty_secretary, award_system, "Перевіряє нагороди, керує поданнями факультету", "HTTPS")
Rel(dean, award_system, "Схвалює нагороди факультету, призначає ролі, переглядає аналітику", "HTTPS")
Rel(rector_secretary, award_system, "Розглядає нагороди університетського рівня", "HTTPS")
Rel(rector, award_system, "Остаточне схвалення, виконавчі панелі, політичні рішення", "HTTPS")
Rel(system_admin, award_system, "Обслуговування системи, моніторинг, управління резервними копіями", "HTTPS/SSH")

' Зв'язки - Система до Зовнішніх
Rel(award_system, ldap, "Аутентифікує користувачів, синхронізує дані працівників", "LDAP/LDAPS")
Rel(award_system, ai_service, "Надсилає документи для обробки, отримує метадані", "REST/HTTPS")
Rel(award_system, email_service, "Надсилає email-сповіщення", "SMTP/TLS")
Rel(award_system, sms_gateway, "Надсилає SMS-сповіщення", "REST/HTTPS")
Rel(award_system, file_storage, "Зберігає/отримує сертифікати та документи", "REST/HTTPS")

@enduml



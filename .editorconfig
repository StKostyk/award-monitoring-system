# =============================================================================
# Award Monitoring & Tracking System - EditorConfig
# =============================================================================
# Purpose: Cross-IDE/editor code style consistency
# Version: 1.0
# Last Updated: January 2026
#
# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org
# =============================================================================

# Top-most EditorConfig file
root = true

# =============================================================================
# Default Settings (all files)
# =============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# =============================================================================
# Java Files
# =============================================================================
[*.java]
indent_size = 4
max_line_length = 120
ij_java_class_count_to_use_import_on_demand = 999
ij_java_names_count_to_use_import_on_demand = 999

# =============================================================================
# XML Files (Maven POM, Spring configs, etc.)
# =============================================================================
[*.xml]
indent_size = 2

# =============================================================================
# YAML/YML Files (Spring Boot configs, Docker Compose, K8s)
# =============================================================================
[*.{yml,yaml}]
indent_size = 2

# =============================================================================
# JSON Files
# =============================================================================
[*.json]
indent_size = 2

# =============================================================================
# Properties Files (Spring Boot application.properties)
# =============================================================================
[*.properties]
indent_size = 4

# =============================================================================
# SQL Files (Flyway migrations)
# =============================================================================
[*.sql]
indent_size = 4

# =============================================================================
# Markdown Files
# =============================================================================
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# =============================================================================
# Shell Scripts
# =============================================================================
[*.sh]
indent_size = 2
end_of_line = lf

# =============================================================================
# PowerShell Scripts
# =============================================================================
[*.ps1]
indent_size = 4
end_of_line = crlf

# =============================================================================
# Batch Files
# =============================================================================
[*.{bat,cmd}]
indent_size = 4
end_of_line = crlf

# =============================================================================
# TypeScript/JavaScript (Angular Frontend)
# =============================================================================
[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 120

# =============================================================================
# HTML/Angular Templates
# =============================================================================
[*.{html,htm}]
indent_size = 2

# =============================================================================
# CSS/SCSS/SASS
# =============================================================================
[*.{css,scss,sass,less}]
indent_size = 2

# =============================================================================
# Docker Files
# =============================================================================
[Dockerfile]
indent_size = 4

[docker-compose*.yml]
indent_size = 2

# =============================================================================
# Kubernetes Manifests
# =============================================================================
[*.{yaml,yml}]
indent_size = 2

# =============================================================================
# Gradle/Groovy Files
# =============================================================================
[*.{gradle,groovy}]
indent_size = 4

# =============================================================================
# PlantUML Diagrams
# =============================================================================
[*.puml]
indent_size = 2

# =============================================================================
# Git Files
# =============================================================================
[.gitignore]
indent_size = 4

[.gitattributes]
indent_size = 4

# =============================================================================
# Makefile (tabs required)
# =============================================================================
[Makefile]
indent_style = tab
indent_size = 4

# =============================================================================
# IntelliJ IDEA Files
# =============================================================================
[.idea/**.xml]
indent_size = 2

